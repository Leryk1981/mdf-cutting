# Пример файла конфигурации окружения
# Скопируйте этот файл в .env и настройте параметры

# Режим отладки
DEBUG_MODE=False

# ID формата таблицы по умолчанию
TABLE_FORMAT_ID=standard_table

# Путь к конфигурационным файлам
CONFIG_PATH=./src/mdf_cutting/config/

# Параметры логирования
LOG_LEVEL=INFO
LOG_FILE_FORMAT={date}_{process}.log

# Параметры оптимизации
MAX_ITERATIONS=10000
TOLERANCE=0.001
POPULATION_SIZE=50

# Параметры материала
DEFAULT_THICKNESS=16
KERF_WIDTH=3.2
MIN_STRIP_WIDTH=10

# Параметры производительности
MAX_MEMORY_USAGE=512
TIMEOUT_SECONDS=300
PARALLEL_PROCESSING=true
MAX_WORKERS=4 